<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Весовой модуль" preserve-order="true" configfailurepolicy="continue" >
<listeners>
    <listener class-name="org.uncommons.reportng.HTMLReporter" />
 </listeners>
	 <test name="Загрузка/выгрузка товара на всесы" >
	<classes>
			<class name="ru.crystals.set10.test.weight.WeightBaseTest"/>
	</classes>
	</test>
	 <test name="Выгрузка из весов с запретом продаж (Леконды)" >
	<classes>
			<class name="ru.crystals.set10.test.weight.WeightLekondTest"/>
	</classes>
	</test>
	 <test name="Изменение цен на весах (цены 1, 2, 3, 4)" >
	<classes>
			<class name="ru.crystals.set10.test.weight.UnloadWeightWithInvalidPrice"/>
	</classes>
	</test>
</suite> 
